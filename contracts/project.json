{
    "name": "contracts",
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "command": "fuels build",
                "cwd": "."
            }
        },
        "typegen": {
            "executor": "nx:run-commands",
            "options": {
                "command": "fuels typegen -i \"**/*-abi.json\" -o ./types",
                "cwd": "."
            },
            "dependsOn": [
                "build"
            ]
        },
        "deploy": {
            "executor": "nx:run-commands",
            "options": {
                "command": "fuels deploy",
                "cwd": "."
            },
            "dependsOn": [
                "typegen"
            ]
        },
        "node": {
            "executor": "nx:run-commands",
            "options": {
                "command": "fuels node",
                "cwd": "."
            },
            "continuous": true
        },
        "dev": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "tsx scripts/deploy-and-initialize.ts"
                ],
                "parallel": true
            },
            "dependsOn": [
                "node"
            ]
        }
    }
}