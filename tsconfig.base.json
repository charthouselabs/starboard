{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2020", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "rootDir": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "sourceMap": true,
    "declaration": false,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
  },
  "exclude": ["node_modules", "tmp"]
}
